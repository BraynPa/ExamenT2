

@{ List<Pokemon> por = ((List<Pokemon>)Model); }

<h1>Pokemon </h1>
<h3>Total de Pokemones capturados: @por.Count </h3>
<a href="/Pokemon/capturados">Pokemones capturados</a>
<a href="/Pokemon/create">Crear Pokemon</a>

<table class="table">
    <thead>
        <tr>
            <th>Imagen</th>
            <th>Nombre</th>
            <th>Tipo</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in por)
        {
<tr>
    <td>
        <img src="@item.RutaImgPo" width="100" height="50" alt="Alternate Text" />
    </td>
    <td>@item.Nombre</td>
    <td>@item.Type.Nombre</td>
    <td>
        <a href="/Pokemon/Capturar?PokemonId=@item.Id">Capturar</a>
        <a href="/Pokemon/Edit?PokemonId=@item.Id">Editar</a>
        <a href="/Pokemon/Delete?PokemonId=@item.Id">Eliminar</a>
    </td>
</tr>}
    </tbody>
</table>

